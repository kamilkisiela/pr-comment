{
  "name": "action-pr-message",
  "version": "0.0.1",
  "private": true,
  "description": "Create or update a message on Pull Request",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "prepack": "npm run bundle",
    "bundle": "ncc build src/main.ts -o dist",
    "test": "jest",
    "all": "yarn build && yarn format && yarn bundle && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamilkisiela/pr-message.git"
  },
  "keywords": [
    "actions",
    "pull-request",
    "bot"
  ],
  "author": "Kamil Kisiela <kamil.kisiela@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.2.3",
    "@actions/github": "2.1.1",
    "axios": "0.21.1"
  },
  "devDependencies": {
    "@types/jest": "25.1.4",
    "@types/node": "13.9.3",
    "@typescript-eslint/parser": "2.25.0",
    "@zeit/ncc": "0.22.0",
    "jest": "25.1.0",
    "jest-circus": "25.1.0",
    "js-yaml": "3.13.1",
    "prettier": "2.0.2",
    "ts-jest": "25.2.1",
    "typescript": "3.8.3"
  }
}
